<div class="container-fluid">
    {% for news in news_items %}
        <div class="mb-5">
            <div class="d-lg-flex justify-content-between align-items-baseline border border-top-0 border-left-0 border-right-0 mb-2">
                <h2 class="p-0 break-word"><a href="{{ news.link }}">{{ news.title }}</a></h2>
                <div class="p-0">{{ news.lastModified | date('d.m.Y') }}</div>
            </div>
            <div class="break-word">
                {{ news.description | purify('news') }}
            </div>
        </div>
    {% endfor %}
    <div class="d-flex justify-content-between pt-2 pb-2 mb-5">
        <a href="{{ path('app_news_index') }}">mehr Neuigkeiten</a>
        <a href="{{ path('app_recentnews_index') }}">RSS Feed</a>
    </div>
</div>
