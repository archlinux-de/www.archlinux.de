{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/releases') }}
{% endblock %}

{% block title %}Releases{% endblock %}

{% block canonical %}{{ absolute_url(path('app_releases_index',{'search': search })) }}{% endblock %}

{% block body %}
    <h1 class="mb-4">Arch Linux Releases</h1>
    <table id="releases" class="table table-striped table-bordered table-sm" width="100%" cellspacing="0"
           data-ajax="{{ path('app_releases_datatables') }}"
           data-search='{"search": "{{ search }}"}'
           data-release-url-template="{{ path('app_releases_release', {'version': '1_version_'}) }}">
        <thead>
        <tr>
            <th>Version</th>
            <th>Veröffentlichung</th>
            <th>Kernel-Version</th>
            <th>Verfügbarkeit</th>
        </tr>
        </thead>
    </table>
{% endblock %}
