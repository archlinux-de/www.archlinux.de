{% apply spaceless %}
<?xml version='1.0' encoding='UTF-8'?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
        <loc>{{ absolute_url(path('app_download_index')) }}</loc>
    </url>
    <url>
        <loc>{{ absolute_url(path('app_mirrorstatus_index')) }}</loc>
    </url>
    <url>
        <loc>{{ absolute_url(path('app_packages_index')) }}</loc>
    </url>
    <url>
        <loc>{{ absolute_url(path('app_start_index')) }}</loc>
    </url>
    <url>
        <loc>{{ absolute_url(path('app_news_index')) }}</loc>
    </url>
    <url>
        <loc>{{ absolute_url(path('app_releases_index')) }}</loc>
    </url>
    {# @var package \App\Entity\Packages\Package #}
    {% for package in packages %}
        <url>
            <loc>{{ absolute_url(path(
                    'app_packagedetails_index',
                    {'repo': package.repository.name, 'arch': package.repository.architecture, 'pkgname': package.name}
                )) }}</loc>
            <lastmod>{{ package.buildDate | date('Y-m-d') }}</lastmod>
        </url>
    {% endfor %}
    {# @var item \App\Entity\NewsItem #}
    {% for item in news %}
        <url>
            <loc>{{ absolute_url(path('app_news_item', {'id': item.id, 'slug': item.title | slug})) }}</loc>
            <lastmod>{{ item.lastModified | date('Y-m-d') }}</lastmod>
        </url>
    {% endfor %}
    {# @var release \App\Entity\Release #}
    {% for release in releases %}
        <url>
            <loc>{{ absolute_url(path('app_releases_release', {'version': release.version})) }}</loc>
            <lastmod>{{ release.created | date('Y-m-d') }}</lastmod>
        </url>
    {% endfor %}
</urlset>
{% endapply %}
